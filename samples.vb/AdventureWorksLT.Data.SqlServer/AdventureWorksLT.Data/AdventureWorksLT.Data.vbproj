<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>DevZest.Samples.AdventureWorksLT</RootNamespace>
    <TargetFrameworks>netstandard2.0;net461</TargetFrameworks>
    <AssemblyName>AdventureWorksLT.Data</AssemblyName>
    <OptionStrict>On</OptionStrict>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <NoWarn />
    <WarningsAsErrors>41999,42016,42017,42018,42019,42020,42021,42022,42032,42036</WarningsAsErrors>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <NoWarn />
    <WarningsAsErrors>41999,42016,42017,42018,42019,42020,42021,42022,42032,42036</WarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <None Update="AdventureWorksLT_log.ldf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="UserMessages.Designer.vb">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>UserMessages.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="UserMessages.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>UserMessages.Designer.vb</LastGenOutput>
      <CustomToolNamespace>My</CustomToolNamespace>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Import Include="DevZest.Data" />
    <Import Include="DevZest.Data.Annotations" />
    <Import Include="DevZest.Data.SqlServer" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\AdventureWorksLT.Data.DbDesign\LocalDb\AdventureWorksLT.mdf" Link="AdventureWorksLT.mdf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="..\AdventureWorksLT.Data.DbDesign\LocalDb\AdventureWorksLT_log.ldf" Link="AdventureWorksLT_log.ldf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\src\Data.SqlServer\Data.SqlServer.csproj" />
  </ItemGroup>

  <Import Project="..\$(AssemblyName).props" Condition=" '$(SolutionName)' == 'RDO.Data.Samples' " />
  <Import Project="..\$(AssemblyName).props" Condition=" '$(SolutionName)' == 'RDO.WPF.Samples' " />
  <Import Project="..\$(AssemblyName).props" Condition=" '$(SolutionName)' == 'AdventureWorksLT' " />
</Project>
