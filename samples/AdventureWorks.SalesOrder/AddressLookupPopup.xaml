<Popup x:Class="AdventureWorks.SalesOrders.AddressLookupPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdventureWorks.SalesOrders"
        xmlns:dz="http://schemas.devzest.com/data/windows"
        mc:Ignorable="d" Closed="Popup_Closed" StaysOpen="False" Width="Auto" PopupAnimation="Slide" MaxHeight="300">
    <Border BorderBrush="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" BorderThickness="1"  CornerRadius="2" Background="LightGray" >
        <Border BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" Background="White" Margin="2" BorderThickness="1">
            <dz:DataView x:Name="_dataView" VerticalScrollBarVisibility="Visible" />
        </Border>
    </Border>
</Popup>
