<Window x:Class="AdventureWorks.SalesOrders.CustomerLookupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdventureWorks.SalesOrders"
        xmlns:dz="http://schemas.devzest.com/data/windows"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterOwner"
        Title="Customer" Height="400" Width="550">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Padding" Value="2,0,2,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="Images/window_background.jpg" Opacity=".5" />
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Background="White" Margin="5">
            <dz:DataView x:Name="_dataView" />
        </Border>
        <UniformGrid Columns="2" Width="100" Grid.Row="1" HorizontalAlignment="Right">
            <Button Margin="0,0,5,5">OK</Button>
            <Button Margin="0,0,5,5">Cancel</Button>
        </UniformGrid>
    </Grid>
</Window>
