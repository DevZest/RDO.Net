<Window x:Class="AdventureWorks.SalesOrders.SalesOrderForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdventureWorks.SalesOrders"
        xmlns:dz="http://schemas.devzest.com/data/windows"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        Title="SalesOrderForm" Height="500" Width="600">
    <DockPanel>
        <Border Background="White" Margin="5">
            <dz:DataView x:Name="_dataView" />
        </Border>
        <UniformGrid Width="180" Columns="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" DockPanel.Dock="Bottom">
            <Button Content="OK" Margin="5" />
            <Button Content="Cancel" Margin="5" />
        </UniformGrid>
    </DockPanel>
</Window>
