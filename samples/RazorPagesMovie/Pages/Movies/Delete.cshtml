@page "{id:int}"
@model RazorPagesMovie.Pages.Movies.DeleteModel

@{
    ViewData["Title"] = "Delete";
    var _ = Model.Movie._;
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @_.Title.DisplayName
        </dt>
        <dd class="col-sm-10">
            @_.Title[0]
        </dd>
        <dt class="col-sm-2">
            @_.ReleaseDate.DisplayName
        </dt>
        <dd class="col-sm-10">
            @_.ReleaseDate[0]?.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            @_.Genre.DisplayName
        </dt>
        <dd class="col-sm-10">
            @_.Genre[0]
        </dd>
        <dt class="col-sm-2">
            @_.Price.DisplayName
        </dt>
        <dd class="col-sm-10">
            @_.Price[0]?.ToString("C")
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" name="id" value="@_.ID[0]" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
