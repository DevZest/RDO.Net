<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DevZest.Windows.Controls"
    xmlns:primitives="clr-namespace:DevZest.Windows.Controls.Primitives">
    
    <Style TargetType="{x:Type local:BlockView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:BlockView}">
                    <primitives:BlockViewPanel Name="PART_Panel" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
