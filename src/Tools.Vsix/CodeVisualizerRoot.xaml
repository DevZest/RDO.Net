<Grid x:Class="DevZest.Data.Tools.CodeVisualizerRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:vsui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
    Background="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowBackgroundBrushKey}}"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">
    <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="_contentPresenter" />
    <vsui:SmoothProgressBar x:Name="_progressBar"
        VerticalAlignment="Top" HorizontalAlignment="Stretch"
        Background="{DynamicResource {x:Static vsui:ProgressBarColors.BackgroundBrushKey}}"
        Foreground="{DynamicResource {x:Static vsui:ProgressBarColors.IndicatorFillBrushKey}}" />
</Grid>
